<div class="container">
  <div class='row pt-4'>
    <div class="col-9 mx-4 bg-white mb-4 d-flex flex-column py-2", style="border-radius: 5px;">
      <h1 class="py-2 text-center"><%= @boat.name %></h1>
      <% if @boat.photo.key %>
        <div class=" d-flex justify-content-center"><%= cl_image_tag @boat.photo.key, height: 500, width: 700, crop: :fill %></div>
      <% else %>
        <div class=" d-flex justify-content-center"><%= image_tag("boat.jpg") %></div>
      <%end%>
    <div>
      <h3 class="pt-4 pb-2">Boat hosted by <%= @boat.user.email %></h3>
      <p><strong>Type: <%= @boat.category %></strong></p>
      <p><%= @boat.description %></p>
    </div>
  </div>
  <div class="col-2 bg-white px-4 py-4 h-25 d-inline-block d-flex justify-content-center", style="border-radius: 5px;">
  <div class="d-flex justify-content-baseline row">
  <% if current_user.id != @boat.user_id %>
    <%= simple_form_for [@boat, @booking], url: boat_bookings_path(@boat) do |f| %>
      <h5><strong>$<%= @boat.price %>/day</strong></h5>
      <div class="mt-3">
        <%= f.label "CHECK-IN", style: "font-weight: 700;" %>
          <div>
            <%= f.date_field :start_date %>
          </div>
      </div>
      <div class="mt-3">
        <%= f.label "CHECKOUT", style: "font-weight: 700;" %>
          <div>
            <%= f.date_field :end_date %>
          </div>
      </div>
      <div class="mt-3 pl-1">
        <%= f.submit "Reserve", class: "btn text-white btn-danger btn-lg", style: "background-color: rgba(222, 69, 51, 1); border-radius: 5px"%>
      </div>
    <% end %>
  <% else %>
      <%= link_to 'Edit', edit_boat_path(@boat), class: "btn btn-warning" %>
      <%= link_to 'Delete', boat_path(@boat), class: "btn btn-danger ms-2" , method: :delete, data: { confirm: "Are you sure you want to delete this boat?" } %>
  <% end %>
  </div>
  </div>
       <div class='d-block'>
      <h2> Availability </h2>
      <%= render partial: 'shared/calendar', :locals => {bookings: @boat.bookings} %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-5 container mt-3 pt-4 mb-3 pb-3 bg-white">
    <% if @boat.reviews.present? %>
      <% @boat.reviews.each do |review|  %>
        <p><strong><%= review.user.email %></strong></p>
        <p>Rating: <%= review.rating %></p>
        <p>Comment: <%= review.comment %></p>
    <% end %>
    <% else  %>
      <p>There are no reviews for this boat.</p>
    <% end %>
  </div>
</div>
