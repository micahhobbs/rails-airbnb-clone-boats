<div class="container py-3 d-flex justify-content-end">
  <% if @boat.user_id == current_user.id %>
      <%= link_to 'Edit', edit_boat_path(@boat), class: "btn btn-warning" %>
      <%= link_to 'Delete', boat_path(@boat), class: "btn btn-danger ms-2" , method: :delete, data: { confirm: "Are you sure you want to delete this boat?" } %>
  <% end %>
</div>
<div class="container pt-4 bg-white">
  <h1><%= @boat.name %></h1>
    <div><%= cl_image_tag @boat.photo.key, height: 400, width: 500, crop: :fill %></div>
  <div>
    <h3>Boat hosted by <%= @boat.user.email %></h3>
    <p><strong>Type: <%= @boat.category %></strong></p>
    <p><%= @boat.description %></p>
  </div>
</div>
<div class="container pt-4 bg-white py-2">
  <%= simple_form_for [@boat, @booking], url: boat_bookings_path(@boat) do |f| %>
    <h5><strong>$<%= @boat.price %></strong></h5>
    <div class="mt-3">
      <%= f.label "CHECK-IN" %>
      <div>
        <%= f.date_field :start_date %>
      </div>
    </div>
    <div class="mt-3">
      <%= f.label "CHECKOUT" %>
      <div>
        <%= f.date_field :end_date %>
      </div>
    </div>
    <div class="mt-3 px-5">
      <%= f.submit "Reserve", class: "btn btn-danger btn-md form-control"%>
    </div>
  <% end %>
</div>
