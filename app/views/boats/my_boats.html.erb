<div class="container">
    <%= render partial: 'shared/tabbar', :locals => {my_boats: "active", my_bookings: "", bookings_on_my_boats: ""} %>
  <div class="d-flex justify-content-between pt-5">
    <%= link_to "Add a new boat", new_boat_path, class: "btn btn-primary" %>
  </div>
  <hr>
  <div class="cards">
    <% @boats.each do |boat| %>
      <div class="card-product">
        <% if boat.photo.key %>
        <div><%= cl_image_tag boat.photo.key, height: 400, width: 500, crop: :fill %></div>
        <% else %>
        <%= image_tag("boat.jpg") %>
        <%end%>
        <div class="card-product-infos">
          <%= link_to boat.name, boat_path(boat.id)%>
          <p><%= boat.description %></p>
          <p><%= boat.price %>/day</p>
        </div>
      </div>
    <% end %>
  </div>
</div>
