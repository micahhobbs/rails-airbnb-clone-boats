<div class="container">
  <div class="d-flex justify-content-between pt-5">
    <h1>Browse boats</h1>
    <%= link_to "Add a new boat", new_boat_path, class: "btn btn-primary" %>
  </div>
  <hr>
  <div class="cards">
    <% @boats.each do |boat| %>
      <div class="card-product">
        <%= image_tag("boat.jpg") %>
        <div class="card-product-infos">
          <h2><%= boat.name %></h2>
          <p><%= boat.description %></p>
          <p><%= boat.price %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>
